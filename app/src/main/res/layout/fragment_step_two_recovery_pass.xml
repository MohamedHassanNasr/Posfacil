<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    tools:context=".ui.view.account.fragments.StepTwoRecoveryPassFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ln_arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="20">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow_rigth" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="60"
                android:fontFamily="@font/encodesans_medium"
                android:gravity="center"
                tools:text="@string/recuperar_password"
                android:textColor="@color/color_1E2227"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="horizontal"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/encodesans_bold"
        android:gravity="center"
        tools:text="@string/step_two_title_recovery_pass"
        android:textColor="@color/color_515A69"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/encodesans_medium"
        android:gravity="center"
        tools:text="@string/step_two_recovery_pass"
        android:textSize="@dimen/_13sdp"/>

    <TextView
        android:id="@+id/tv_email_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/encodesans_bold"
        android:gravity="center"
        tools:text="admin@gmail.com"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tv_otp_pos1"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/color_7D889B"/>

        <EditText
            android:id="@+id/tv_otp_pos2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/color_7D889B"/>

        <EditText
            android:id="@+id/tv_otp_pos3"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/color_7D889B"/>

        <EditText
            android:id="@+id/tv_otp_pos4"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/color_7D889B"/>

        <EditText
            android:id="@+id/tv_otp_pos5"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/color_7D889B"/>

        <EditText
            android:id="@+id/tv_otp_pos6"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/color_7D889B"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_resend_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/encodesans_medium"
            android:gravity="center"
            android:text="@string/tv_resend_code"
            android:textColor="@color/color_7D889B"
            android:textSize="@dimen/_13sdp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_validate_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:gravity="start"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_24sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:text="@string/tv_next"
            android:textSize="@dimen/_14sdp"
            app:cornerRadius="@dimen/_10sdp"
            app:icon="@drawable/ic_arrow_forward_white"
            app:iconGravity="end"
            app:iconSize="@dimen/_16sdp" />


    </LinearLayout>
</LinearLayout>

