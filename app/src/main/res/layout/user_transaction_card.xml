<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:backgroundTint="@color/color_F6F7F8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/colorIcon"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                style="@style/roundedImageViewRounded"
                android:background="@color/color_4CA80B"
                >

            </com.google.android.material.imageview.ShapeableImageView>


            <TextView
                android:id="@+id/userNameTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Michelle"
                android:fontFamily="@font/encodesans_semibold"
                android:textColor="@color/color_1E2227"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            >

            <TextView
                android:id="@+id/txsField"
                android:layout_weight="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_transaccione"
                android:fontFamily="@font/encodesans_semibold"
                android:textColor="@color/color_1E2227"
                >

            </TextView>

            <TextView
                android:id="@+id/transactionQuantity"
                android:layout_weight="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:gravity="right"
                android:fontFamily="@font/encodesans_semibold"
                android:textColor="@color/color_1E2227"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/amountField"
                android:layout_weight="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monto"
                android:fontFamily="@font/encodesans_semibold"
                android:textColor="@color/color_1E2227"
                >

            </TextView>

            <TextView
                android:id="@+id/transactionAmount"
                android:layout_weight="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$200.00"
                android:gravity="right"
                android:fontFamily="@font/encodesans_semibold"
                android:textColor="@color/color_1E2227"
                >

            </TextView>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>