<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:background="@color/color_E5E5E5"
    tools:context=".ui.view.transactions.payment.fragments.CobroQrCodeFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_4sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            >

            <LinearLayout
                android:id="@+id/ln_arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow_rigth"
                    >

                </ImageView>

            </LinearLayout>



            <TextView
                android:layout_weight="60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pago_qr"
                android:fontFamily="@font/encodesans_medium"
                android:textColor="@color/color_1E2227"
                android:gravity="center"
                android:layout_gravity="center"
                >


            </TextView>

            <LinearLayout
                android:id="@+id/ln_close_back"
                android:layout_weight="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"

                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_close_24"
                    >

                </ImageView>

            </LinearLayout>


        </LinearLayout>




    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:gravity="center_horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_28sdp"
            app1:cardCornerRadius="@dimen/_28sdp"
            app:cardElevation="@dimen/_5sdp">

            <ImageView
                android:id="@+id/iv_qr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_16sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_qrcode"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scanea_qr"
            android:layout_marginTop="@dimen/_40sdp"
            android:fontFamily="@font/encodesans_semibold"
            android:textColor="@color/color_3D444F"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"

            >

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"

            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_verificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_24sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text="@string/verificar"
                app:iconGravity="end"
                app:iconSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_other_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:backgroundTint="@color/color_D7DAE0"
                android:fontFamily="@font/encodesans_medium"
                android:paddingStart="@dimen/_16sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_24sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:text="@string/other_transaction"
                android:textColor="@color/color_515A69"

                />

        </LinearLayout>


    </LinearLayout>








</LinearLayout>