<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.home.fragments.SliderThreeFragment">




    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        android:src="@drawable/splash_three" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_90sdp"
        android:layout_gravity="top|left"
        android:text="@string/text_splash_three"
        android:maxWidth="@dimen/_180sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:fontFamily="@font/encodesans_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_20sdp"

        >


    </TextView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_gravity="bottom"
        android:gravity="start"
        android:paddingStart="@dimen/_16sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingEnd="@dimen/_24sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="@string/log_in"
        android:textSize="@dimen/_14sdp"
        app:cornerRadius="@dimen/_10sdp"
        app:icon="@drawable/ic_arrow_forward_white"
        app:iconGravity="end"
        app:iconSize="@dimen/_16sdp" />





</FrameLayout>